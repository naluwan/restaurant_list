<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST"
  class="col-12 d-flex flex-column align-items-around mt-5 mb-5">
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="name">餐廳名稱：</span>
      </div>
      <input type="text" class="form-control" name="name" aria-describedby="name" aria-label="name"
        placeholder="請輸入餐廳名稱 ex.Sababa 沙巴巴中東美食" value="{{ restaurant.name }}" required>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="category">餐廳類別：</label>
      </div>
      <select class="custom-select" id="category" name="category" required>
        <option value="0">請選擇</option>
        <option value="日式料理" {{#is category '日式料理' }} selected {{/is}}>日式料理</option>
        <option value="中東料理" {{#is category '中東料理' }} selected {{/is}}>中東料理</option>
        <option value="義式餐廳" {{#is category '義式餐廳' }} selected {{/is}}>義式餐廳</option>
        <option value="美式" {{#is category '美式' }} selected {{/is}}>美式</option>
        <option value="酒吧" {{#is category '酒吧' }} selected {{/is}}>酒吧</option>
        <option value="咖啡" {{#is category '咖啡' }} selected {{/is}}>咖啡</option>
      </select>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="image">餐廳圖片：</span>
      </div>
      <input type="text" class="form-control" name="image" aria-describedby="image"
        placeholder="請輸入圖片網址 ex.https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg"
        value="{{ restaurant.image }}" required>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="location">餐廳地址：</span>
      </div>
      <input type="text" class="form-control" name="location" aria-describedby="location"
        placeholder="請輸入餐廳地址 ex.台北市羅斯福路三段 283 巷 17 號" value="{{ restaurant.location }}" required>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="phone">餐廳電話：</span>
      </div>
      <input type="tel" class="form-control" name="phone" aria-describedby="phone" placeholder="請輸入餐廳電話 ex.02 2363 8009"
        value="{{ restaurant.phone }}" required>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="google_map">餐廳地圖：</span>
      </div>
      <input type="text" class="form-control" name="google_map" aria-describedby="google_map"
        placeholder="請輸入餐廳地圖 ex.https://goo.gl/maps/BJdmLuVdDbw" value="{{ restaurant.google_map }}" required>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="rating">餐廳評分：</span>
      </div>
      <input type="number" min="0" max="5" step="0.1" class="form-control" name="rating" aria-describedby="rating"
        placeholder="請輸入餐廳評分 0 ~ 5 ex.4.1" value="{{ restaurant.rating }}" required>
    </div>
  </div>
  <div class="form-group col-8 align-self-center">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="description">餐廳簡介：</span>
      </div>
      <textarea class="form-control" name="description" aria-describedby="description"
        placeholder="請輸入餐廳簡介 ex.沙巴巴批塔是台灣第一家純手工批塔專賣店,只選用最新鮮的頂級原料,以及道地的中東家傳配方。" class="col-10"
        required>{{ restaurant.description }}</textarea>
    </div>
  </div>

  <div class="d-flex flex-row justify-content-center col-12">
    <a href="/" class="" style="text-decoration:none; color:azure">
      <button type="button" class="btn btn-secondary col-12">
        返回
      </button>
    </a>

    <button type="submit" class="btn btn-primary ml-2">儲存</button>
  </div>

</form>